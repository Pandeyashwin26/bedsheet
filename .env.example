# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                          AgriChain Environment Variables                       ║
# ║                                                                                ║
# ║  Copy this file to .env and fill in your actual values                        ║
# ║  NEVER commit the actual .env file to version control                          ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

# ═══════════════════════════════════════════════════════════════════════════════
# BACKEND CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Environment: development | staging | production
NODE_ENV=development

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated for multiple origins)
# Use * for development, specific origins for production
CORS_ORIGINS=http://localhost:19006,http://localhost:8081,exp://localhost:8081

# ═══════════════════════════════════════════════════════════════════════════════
# EXTERNAL API KEYS
# ═══════════════════════════════════════════════════════════════════════════════

# OpenWeatherMap API Key (Required for weather features)
# Get your key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Data.gov.in API Key (Required for mandi prices)
# Get your key at: https://data.gov.in/
DATAGOV_API_KEY=your_datagov_api_key_here

# Google Gemini API Key (Required for ARIA assistant & schemes)
# Get your key at: https://makersuite.google.com/
GOOGLE_API_KEY=your_google_gemini_api_key_here

# HuggingFace Token (Required for disease detection)
# Get your token at: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# ═══════════════════════════════════════════════════════════════════════════════
# SECURITY CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# API Rate Limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# Secret key for session/token signing (generate a random 32+ char string)
SECRET_KEY=your_secret_key_here_minimum_32_characters

# ═══════════════════════════════════════════════════════════════════════════════
# LOGGING & MONITORING
# ═══════════════════════════════════════════════════════════════════════════════

# Log Level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging for production
LOG_JSON_FORMAT=false

# ═══════════════════════════════════════════════════════════════════════════════
# CACHING CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Cache TTL in seconds
WEATHER_CACHE_TTL=21600
MANDI_CACHE_TTL=21600
SCHEMES_CACHE_TTL=86400

# ═══════════════════════════════════════════════════════════════════════════════
# MOBILE APP CONFIGURATION (Expo)
# ═══════════════════════════════════════════════════════════════════════════════

# Backend URL for mobile app (use your machine's local IP for dev)
# Examples:
#   - Local: http://192.168.1.100:8000
#   - Production: https://api.agrichain.example.com
EXPO_PUBLIC_BACKEND_URL=http://192.168.1.100:8000

# API keys exposed to mobile app
EXPO_PUBLIC_GOOGLE_API_KEY=your_google_gemini_api_key_here
EXPO_PUBLIC_HF_TOKEN=your_huggingface_token_here
EXPO_PUBLIC_OPENWEATHER_API_KEY=your_openweathermap_api_key_here
